# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
# max_line_length = 120

# Unix-style newlines with a newline ending
end_of_line = lf
insert_final_newline = true

# space indentation
indent_style = space
# indent_size = 2
# tab_width = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2
